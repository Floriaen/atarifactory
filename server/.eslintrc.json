{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "no-unused-vars": "error",
    "no-undef": "error",
    "quotes": "off",
    "semi": "off"
  },
  "overrides": [
    {
      "files": ["tests/**/*.js"],
      "env": { "jest": true }
    },
    {
      "files": ["games/**/*.js"],
      "env": { "browser": true }
    }
  ]
} 